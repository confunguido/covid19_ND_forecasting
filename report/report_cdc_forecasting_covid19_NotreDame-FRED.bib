}

@article{keelingEfficacyContactTracing2020,
  ids = {keelingEfficacyContactTracing2020a},
  title = {The {{Efficacy}} of {{Contact Tracing}} for the {{Containment}} of the 2019 {{Novel Coronavirus}} ({{COVID}}-19).},
